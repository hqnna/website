---
import { getCollection } from 'astro:content';
import Page from '../../layouts/Page.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const fmtDate = (date: Date) =>
  new Date(date).toLocaleString('en-US', {
    month: '2-digit',
    day: '2-digit',
    year: 'numeric',
  });

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<Page title={post.data.title} desc={post.data.summary}>
  <div class="content">
    <div class="metadata">
      <h1>{post.data.title}</h1>
      <div>
        <p>{post.data.summary}</p>
        <p>{fmtDate(post.data.date)}</p>
      </div>
    </div>

    <div class="sidebar">
      <details class="toc" open>
        <summary>Table of Contents</summary>
        <ul>
          {
            headings
              .filter((h) => h.depth > 1 && h.depth < 4)
              .map((h) => (
                <li class={`depth-${h.depth}`}>
                  <a draggable="false" href={`#${h.slug}`}>
                    {h.text}
                  </a>
                </li>
              ))
          }
        </ul>
      </details>
      <p class="copyright">
        This blog post is licensed under
        <a
          draggable="false"
          href="https://creativecommons.org/licenses/by-nc-nd/4.0/"
        >
          CC BY-NC-ND 4.0</a
        >.
      </p>
    </div>

    <section class="article">
      <Content />
    </section>

    <p class="copyright mobile">
      This blog post is licensed under
      <a
        draggable="false"
        href="https://creativecommons.org/licenses/by-nc-nd/4.0/"
      >
        CC BY-NC-ND 4.0</a
      >.
    </p>
  </div>
</Page>

<script>
  const toc = document.querySelector(".toc") as HTMLDetailsElement | null;
  const tocLinks = toc?.querySelectorAll("a");
  const mobile = window.innerWidth <= 1500;

  if (mobile && toc) toc.open = false;

  tocLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      if (mobile && toc) toc.open = false;
    });
  });

  const tocMap = new Map<string, HTMLAnchorElement>();

  tocLinks?.forEach((link) => {
    const href = link.getAttribute("href")?.slice(1);
    if (href) tocMap.set(href, link);
  });

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        tocLinks?.forEach((link) => link.classList.remove("active"));
        tocMap.get(entry.target.id)?.classList.add("active");
      });
    },
    {
      rootMargin: "-80px 0px -70% 0px",
      threshold: 0,
    },
  );

  document
    .querySelectorAll(".article h2, .article h3")
    .forEach((h) => observer.observe(h));
</script>

<style>
  .content {
    justify-content: center;
    margin-bottom: 3rem;
    margin-top: 64px;
    display: grid;
    padding-top: var(--space-lg);

    & > .metadata {
      border-bottom: 1px solid var(--border);
      padding-bottom: var(--space-sm);
      margin-bottom: 0px;

      & > h1 {
        color: var(--text-primary);
      }

      & > div {
        justify-content: space-between;
        margin-top: var(--space-xs);
        display: flex;

        & > p {
          color: var(--text-muted);
          font-size: var(--font-size);
        }
      }
    }

    .sidebar {
      position: fixed;
      left: max(20px, calc(50% - 24rem - 300px));
      max-height: calc(100vh - 140px);
      width: 250px;
      display: flex;
      flex-direction: column;

      & > .copyright {
        color: rgba(194, 200, 204, 0.4);
        padding-top: var(--space-sm);
        font-size: 10px;

        & > a {
          color: var(--text-muted);
          text-decoration: none;
        }
      }

      @media only screen and (max-width: 1400px) {
        position: relative;
        max-height: none;
        width: 100%;
        left: 0;

        & > .copyright {
          display: none;
        }
      }
    }

    .copyright.mobile {
      display: none;
      color: rgba(194, 200, 204, 0.4);
      font-size: 10px;
      border-top: 1px solid rgba(194, 200, 204, 0.1);
      padding-top: 8px;
      margin-top: var(--space-sm);

      & > a {
        color: var(--text-muted);
        text-decoration: none;
      }

      @media only screen and (max-width: 1400px) {
        display: block;
      }
    }

    .toc {
      border: 1px solid var(--border);
      background: var(--bg-secondary);
      border-radius: var(--radius);
      padding: var(--space-sm);
      overflow-y: auto;
      flex: 1;
      max-height: calc(100vh - 200px);

      & summary {
        font-size: 14px;
        color: var(--text-primary);
        padding: 0px 0px var(--space-sm) 0px;
        font-weight: 600;
        list-style: none;
        cursor: default;
        pointer-events: none;
      }

      & summary::-webkit-details-marker {
        display: none;
      }

      & summary::after {
        display: none;
      }

      & ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      & li {
        margin: 4px 0;
      }

      & a {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 13px;
        display: block;
        padding: 2px 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      & a:hover,
      & a.active {
        color: var(--accent-blue);
      }

      & .depth-2 {
        margin-left: 0;
      }

      & .depth-3 {
        margin-left: 1rem;
      }

      & .depth-4 {
        margin-left: 2rem;
      }

      @media only screen and (max-width: 1400px) {
        margin-top: 12px;
        overflow: visible;
        max-height: none;
        flex: none;

        &:not([open]) {
          margin-bottom: 0;
        }

        & summary {
          cursor: pointer;
          user-select: none;
          position: relative;
          padding-right: 20px;
          pointer-events: auto;
          padding: 0px !important;
        }

        & summary::after {
          display: block;
          content: "â–²";
          position: absolute;
          right: 0;
          top: 50%;
          transform: translateY(-50%);
          font-size: 10px;
          transition: transform 0.2s;
        }

        &[open] summary::after {
          transform: translateY(-50%) rotate(180deg);
        }

        & ul {
          margin-top: var(--space-sm);
        }
      }
    }

    @media only screen and (max-width: 800px) {
      margin-left: var(--space-md);
      margin-right: var(--space-md);
      margin-top: 48px;
      padding-top: var(--space-md);
      display: block;
      max-width: calc(100vw - 2 * var(--space-md));

      & > .metadata {
        & > div > p:first-child {
          font-size: 12px !important;
        }

        & > div > p:last-child {
          display: none;
        }

        & > h1 {
          font-size: 24px;
        }
      }
    }
  }

  .article {
    width: 48rem;
    scroll-margin-top: 70px;

    @media only screen and (max-width: 800px) {
      max-width: 100%;
      width: 100%;
    }

    & :global(pre) {
      border-radius: var(--radius);
      margin: var(--space-sm) 0px var(--space-sm) 0px;
      border: 1px solid var(--border);
      overflow-x: auto;
      background: var(--bg-code) !important;
      padding: var(--space-sm);
      font-weight: 100;
      width: 100%;

      @media only screen and (max-width: 800px) {
        width: auto;
      }
    }

    & :global(pre code) {
      padding: 0px !important;
      font-size: var(--font-code);
      white-space: pre;
      border: none !important;
      background: transparent !important;
      font-family: "Ubuntu Sans Mono", monospace;
    }

    & :global(pre)::-webkit-scrollbar {
      height: 8px;
    }

    & :global(pre)::-webkit-scrollbar-track {
      background-color: var(--bg-primary);
      border-top: 1px solid var(--border);
      border-radius: 0px 0px var(--radius) var(--radius);
    }

    & :global(pre)::-webkit-scrollbar-thumb {
      background-color: var(--border);
    }

    & :global(hr) {
      border: 1px solid var(--border);
    }

    & :global(:not(pre) > code) {
      background: var(--bg-code);
      padding: 0px var(--space-xs) 0px var(--space-xs);
      border: 1px solid var(--border);
      font-family: "Ubuntu Sans Mono", monospace;
      border-radius: var(--radius);
      font-size: var(--font-code);
      white-space: nowrap;
      font-weight: 100;
      color: var(--text-secondary);
    }

    & :global(h1),
    & :global(h2),
    & :global(h3),
    & :global(h4),
    & :global(h5),
    & :global(h6) {
      margin: var(--space-xl) 0px var(--space-sm) 0px;
      align-items: center;
      display: flex;
      color: var(--text-primary);
      scroll-margin-top: 70px;
    }

    & :global(p),
    & :global(ol),
    & :global(ul) {
      margin: var(--space-sm) 0px var(--space-sm) 0px;
      font-size: var(--font-size);
    }

    & :global(mark) {
      background: var(--accent-orange);
      color: var(--bg-primary);
      padding: 0px 2px 0px 2px;
    }

    & :global(a) {
      text-decoration: underline;
      text-decoration-color: transparent;
      text-underline-offset: 2px;
      color: var(--accent-blue);
      -webkit-user-drag: none;
      user-drag: none;
    }

    & :global(a:hover) {
      text-decoration-color: var(--accent-blue);
    }

    & :global(table) {
      border: 1px solid var(--border);
      background-color: var(--bg-tertiary);
      border-radius: var(--radius);
      margin: var(--space-sm) 0px var(--space-sm) 0px;
      border-spacing: 0px;
      width: 100%;
    }

    & :global(table th) {
      background-color: var(--border);
      padding: var(--space-xs) 0px var(--space-xs) 0px;
      border: none;
      color: var(--text-primary);
    }

    & :global(table td) {
      padding: 8px var(--space-sm) 8px var(--space-sm);
      border-bottom: 1px solid var(--border);
    }

    & :global(table td:not(:last-child)) {
      border-right: 1px solid var(--border);
    }

    & :global(table tr:nth-child(even) td) {
      background-color: var(--bg-secondary);
    }

    & :global(table tr:last-child td) {
      border-bottom: none !important;
    }

    & :global(img) {
      border: 1px solid var(--border);
      border-radius: var(--radius);
      max-width: 100%;
    }

    & :global(figure) {
      text-align: center;
    }

    & :global(figcaption) {
      color: var(--text-muted);
      text-align: center;
    }

    & :global(ol),
    & :global(ul) {
      margin-left: 2rem;
    }

    & :global(blockquote) {
      border-left: 2px solid var(--accent-blue);
      background-color: var(--bg-code);
      padding: var(--space-xs) var(--space-sm) var(--space-xs) var(--space-sm);
    }

    & :global(blockquote p) {
      margin: 0px;
    }
  }
</style>
